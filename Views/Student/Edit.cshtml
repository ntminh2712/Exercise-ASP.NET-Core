@model StudentLibary.Models.Student
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Student</h2>
<form action="Update" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">Username <input class="form-control" name="name" value="@Model.Name" /></div>
    <div class="form-group">Rollnumber <input class="form-control" name="rollNumber" value="@Model.RollNumber" /></div>
    <div>
        <input type="submit" value="Submit" />
        <input type="reset" value="Reset" />
    </div>
</form>


